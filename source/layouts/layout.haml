!!! 5
%html
  %head
    %meta( charset='utf-8' )
    %meta( content='IE=edge,chrome=1' http-equiv='X-UA-Compatible' )
    %title= current_page.data.title || 'Chapolito.com'
    %meta{ :name => 'description', :content => current_page.data.description || 'Chapolito.com is the portfolio of Creative Director and Designer Jesse Chapo.' }
    %meta{ name: 'viewport', content: 'user-scalable=0, initial-scale=1.0' }
    = stylesheet_link_tag 'all' 
    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Alegreya:400,700,400italic,700italic|Montserrat:700'
    //= stylesheet_link_tag 'http://basehold.it/28'
    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js'
    = javascript_include_tag 'all' 

  %body( class='#{page_classes}' )

    %header.row
      .logo.col-xs-offset-2.col-xs-22.col-sm-offset-2.col-sm-6
        = image_tag 'chapolito-logo.svg'
      %nav.top-nav.col-xs-offset-2.col-xs-22.col-sm-offset-2.col-sm-14
        %h4{ is_page_active('/') }
          = link_to 'Portfolio', '/'
        %h4{ is_page_active('/about/') }
          = link_to 'About', '/about'

    = yield 

    %footer.row
      .footer-logo.col-xs-offset-4.col-xs-18.col-sm-offset-2.col-md-offset-2.col-md-4
        = image_tag 'chapolito-logo-footer.svg'
      %nav.bottom-nav.col-xs-offset-4.col-xs-18.col-sm-offset-2.col-sm-6.col-md-offset-2.col-md-4
        %ul
          %li{ is_page_active('/') }
            %h6= link_to 'Portfolio', '/'
          %li{ is_page_active('/about/') }
            %h6= link_to 'About', '/about'
          %li{ is_page_active('/testimonials/') }
            %h6= link_to 'Testimonials', '/testimonials'
          %li{ is_page_active('/free-design-resources/') }
            %h6= link_to 'Design Resources', '/free-design-resources/'
          %li{ is_page_active('/contact') }
            %h6= link_to 'Contact', '/contact/'
      .col-xs-offset-4.col-xs-18.col-sm-offset-2.col-sm-6.col-md-offset-2.col-md-4
        %h5.phone-number (760) 814-0831
        = mail_to 'jesse@chapolito.com', nil, encode: 'javascript'
        %p.mail-address.small
          %strong Chapolito Creative Web Design 
          %br
          8036 La Jolla Shores Dr. 
          %br
          La Jolla, CA 92037
      .colophon.col-xs-offset-4.col-xs-18.col-sm-offset-2.col-sm-6.col-md-offset-2.col-md-4
        .social-links
          = link_to 'https://www.linkedin.com/in/chapolito' do
            = image_tag 'social/social-link-linkedin.svg'
          = link_to 'https://twitter.com/chapolito' do
            = image_tag 'social/social-link-twitter.svg'
          = link_to 'https://github.com/chapolito' do
            = image_tag 'social/social-link-github.svg'
          = link_to 'https://dribbble.com/chapolito' do
            = image_tag 'social/social-link-dribbble.svg'
        %p.small
          The portfolio of San Diego, California based Creative Director &amp; Designer Jesse Chapo. 
        %p.x-small
          Copyright &copy; 2007&ndash;2016 Jesse Chapo. All Rights Reserved.
        = link_to 'sitemap', '/', class: 'x-small'

