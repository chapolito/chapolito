= wrap_layout :layout do
  %article.row
    .col-xs-offset-2.col-xs-22.text-center
      = link_to '<- Design Resources', '/free-design-resources'
    .col-xs-offset-2.col-xs-22.col-sm-offset-5.col-sm-16.col-md-offset-6.col-md-14.col-lg-offset-8.col-lg-10
      %h1.text-center= current_article.title
      %h6.text-center= current_article.date.strftime('%b %e, %Y')
      = yield
